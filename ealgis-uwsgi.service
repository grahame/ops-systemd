[Unit]
Description=ealgis
After=postgis94.service
Requires=postgis94.service

[Service]
ExecStart=/opt/bin/systemd-docker run --rm --name %n -v /btrfs/ealgis:/data --link postgis94.service:db -e DB_ENV_POSTGRES_USER=ealgis -e DB_ENV_POSTGRES_PASSWORD=Uu1quuquoyoo -e DB_PORT_5432_TCP_ADDR=db angrygoat/ealgis:next
